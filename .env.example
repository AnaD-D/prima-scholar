# Prima Scholar Environment Configuration

# TiDB Serverless Configuration
TIDB_CONNECTION_STRING=mysql://username:password@gateway01.us-west-2.prod.aws.tidbcloud.com:4000/database?sslmode=require
TIDB_HOST=gateway01.us-west-2.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_DATABASE=prima_scholar
TIDB_USERNAME=your_username
TIDB_PASSWORD=your_password

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app.py
SECRET_KEY=your-super-secret-key-here-change-in-production

# Application Settings
MAX_UPLOAD_SIZE=50MB
UPLOAD_FOLDER=./uploads
ALLOWED_EXTENSIONS=pdf,docx,txt,md

# External API Keys (for external tools integration)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
LINKEDIN_API_KEY=your-linkedin-api-key
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Caching Configuration
CACHE_TTL=300  # 5 minutes
PREDICTION_CACHE_TTL=600  # 10 minutes
ENABLE_CACHING=True

# Performance Settings
MAX_WORKERS=4
GUNICORN_WORKERS=3
GUNICORN_THREADS=2

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
JWT_SECRET_KEY=your-jwt-secret-key-here
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/prima_scholar.log
ENABLE_FILE_LOGGING=True

# Development Settings
DEVELOPMENT_MODE=True
DEBUG_PREDICTIONS=False
MOCK_EXTERNAL_APIS=False

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# CORS_ORIGINS=https://your-domain.com
# DEVELOPMENT_MODE=False